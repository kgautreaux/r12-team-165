<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: "span3" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: "span3" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: "span3" %></div>

<div><p>Disclaimer: This application is currently <b>beta</b> and should not be relied upon for prescription information or prescription reminders.  Please use a back up method to remember your medications for now.</p></div>
  <div><%= f.submit "Sign up", class: "btn-large btn-success span3" %></div>
<% end %>

<%= render "devise/shared/links" %>
