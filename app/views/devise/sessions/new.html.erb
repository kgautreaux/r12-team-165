<h2>Sign in</h2><span><%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn-large" %>
<% end -%></span>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: "span3" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: "span3" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn-large btn-success span3" %></div>
<% end %>

<%= render "devise/shared/links" %>
