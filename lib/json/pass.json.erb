{
  "formatVersion" : <%= @pass.format_version %>,
  "passTypeIdentifier" : "<%= @pass.pass_type_identifier %>",
  "serialNumber" : "<%= @pass.serial_number %>",
  "webServiceURL" : "<%= @pass.webservice_url %>",
  "authenticationToken" : "<%= @pass.auth_token %>",
  "teamIdentifier" : "<%= @pass.team_identifier %>",
  "locations" : <%= @pass.locations %>,
  "barcode" : <%= @pass.barcode %>,
  "organizationName" : "<%= @pass.organization_name %>",
  "description" : "<%= @pass.description %>",
  "logoText" : "<%= @pass.logo_text %>",
  "foregroundColor" : "rgb(0, 0, 0)",
  "backgroundColor" : "rgb(200,200,200)",
  "generic" : {
    "headerFields" : [
      {
        "key": "headerDrugName",
        "value": "<%= @pass.name %>"
      }
    ],
    "primaryFields" : [
      {
        "key" : "primaryDrugName",
        "value" : "<%= @pass.name.capitalize %>\n<%= @pass.readable_dose %><%= @pass.units %>",
        "changeMessage" : "Dose for <%= @pass.name %> changed to %@."
      }
    ],
    "secondaryFields" : [
      {
        "key" : "directions",
        "label" : "Directions",
        "changeMessage" : "Directions for <%= @pass.name %> changed to %@.",
        "value" : "<%= @pass.directions %>"
      },
      {
        "key": "active",
        "label": "Take now?",
        "value": "<%= @pass.take_now? %>",
        "changeMessage": "Time to take your <%= @pass.name %>? %@!"
      }
    ],
    "backFields" : [
      {
        "key" : "category",
        "label" : "Category",
        "value" : "<%= @pass.category %>"
      },
      {
        "key": "rationale",
        "label": "Why am I taking this?",
        "value": "<%= @pass.rationale %>"
      }
    ]
  }
}